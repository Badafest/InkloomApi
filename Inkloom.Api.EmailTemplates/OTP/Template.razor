@using Inkloom.Api.EmailTemplates.Components;
@layout Layout;

<Heading Text=@Greeting />
<Paragraph Text="@OTPMessage" />
<Heading Text="@OTPValue" />
<Paragraph Text="Please DO NOT SHARE this token to anyone. We never ask for login links or tokens of any kind." />
<Paragraph Text="@ResetPasswordMessage" />

@code {
  [Parameter]
  public string BaseUrl { get; set; }
  [Parameter]
  public string Greeting { get; set; }

  [Parameter]
  public string OTPMessage { get; set; }
  [Parameter]
  public string ResetPasswordMessage { get; set; }

  [Parameter]
  public string OTPValue { get; set; }
}